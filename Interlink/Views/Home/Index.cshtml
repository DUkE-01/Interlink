@using Interlink.Core.Application.ViewModels.Post;
@using Interlink.Core.Application.ViewModels.Comment;
@model List<PostViewModel>

@{
    ViewData["Title"] = "Home";
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<style>
    body {
        min-height: 100vh;
    }

    main {
        height: 100vh;
        max-height: 100vh;
        overflow-x: auto;
        overflow-y: hidden;
    }

    .dropdown-toggle {
        outline: 0;
    }
</style>

<body>
    <div class="d-flex flex-column flex-shrink-0 bg-body-tertiary" style="width: 4.5rem;">
        <a href="@Url.Action("Index", "Home")" class="d-block p-3 link-body-emphasis text-decoration-none" data-bs-toggle="tooltip" data-bs-placement="right" title="Icon-only">
            <img src="~/img/marca-logo.png" width="90" height="72" class="rounded-circle">
            <span class="visually-hidden">Icon-only</span>
        </a>
        <ul class="nav nav-pills nav-flush flex-column mb-auto text-center">
            <li class="nav-item">
                <a href="@Url.Action("Index", "Home")" class="nav-link py-3 border-bottom rounded-0 @(currentAction == "Index" && currentController == "Home" ? "active" : "")" aria-current="page" data-bs-toggle="tooltip" data-bs-placement="right" title="Inicio">
                    <img src="~/img/Home.png" alt="mdo" width="22" height="24" class="rounded-circle">
                </a>
            </li>
            <li>
                <a href="@Url.Action("Amigos", "Home")" class="nav-link py-3 border-bottom rounded-0 @(currentAction == "Amigos" && currentController == "Home" ? "active" : "")" data-bs-toggle="tooltip" data-bs-placement="right" title="Amigos">
                    <img class="rounded-circle" alt="mdo" width="22" height="24" aria-label="Amigos" src="~/img/Amigos.png">
                </a>
            </li>
            <li>
                <a href="@Url.Action("Chats", "Home")" class="nav-link py-3 border-bottom rounded-0 @(currentAction == "Chats" && currentController == "Home" ? "active" : "")" data-bs-toggle="tooltip" data-bs-placement="right" title="Chats">
                    <img class="rounded-circle" alt="mdo" width="22" height="24" aria-label="Mensajes" src="~/img/Chats.png">
                </a>
            </li>
            <li>
                <a href="@Url.Action("Buscar", "Home")" class="nav-link py-3 border-bottom rounded-0 @(currentAction == "Buscar" && currentController == "Home" ? "active" : "")" data-bs-toggle="tooltip" data-bs-placement="right" title="Buscar">
                    <img class="rounded-circle" alt="mdo" width="24" height="24" aria-label="Explorar" src="~/img/Buscar.png">
                </a>
            </li>
        </ul>
        <div class="dropdown border-top">
            <a href="#" class="d-flex align-items-center justify-content-center p-3 link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="~/img/EditarPerfil.png" alt="mdo" width="24" height="24" class="rounded-circle">
            </a>
            <ul class="dropdown-menu text-small shadow">
                <li><a class="dropdown-item" href="@Url.Action("Ajustes", "User")">Ajustes</a></li>
                <li><a class="dropdown-item" href=@Url.Action("Perfil", "User")#">Perfil</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="@Url.Action("LogOut", "User")">Cerrar Sesión</a></li>
            </ul>
        </div>
    </div>
    <main>
    <div class="container mt-4">
        <div class="row mb-4">
            <div class="col-md-8 mx-auto">
                <form asp-action="Index" asp-controller="Home" method="post">
                    <div class="form-group">
                        <textarea class="form-control" name="Content" placeholder="¿Qué estás pensando?" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mt-2">Publicar</button>
                </form>
            </div>
        </div>

        
        <div class="row">
            <div class="col-md-8 mx-auto">

                @if (Model == null || Model.Count == 0)
                {
                    <h2>No hay posts</h2>
                }
                else
                {
                    
                
                @foreach (PostViewModel post in Model)
                {
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">@post.User.Username</h5>
                            <p class="card-text">@post.Content</p>
                            <p class="text-muted small">@post.CreatedAt.ToString("g")</p>

                            
                            <div class="mt-3">
                                @if (post.Comments.Any())
                                {
                                    <h6>Comentarios</h6>
                                    <ul class="list-group">
                                        @foreach (var comment in post.Comments)
                                        {
                                            <li class="list-group-item">
                                                <strong>@comment.User.Username</strong>: @comment.Content
                                                <p class="small text-muted">@comment.CreatedAt.ToString("g")</p>

                                                
                                                @if (comment.Replies.Any())
                                                {
                                                    <ul class="list-group mt-2">
                                                        @foreach (var reply in comment.Replies)
                                                        {
                                                            <li class="list-group-item">
                                                                <strong>@reply.User.Username</strong>: @reply.Content
                                                                <p class="small text-muted">@reply.CreatedAt.ToString("g")</p>
                                                            </li>
                                                        }
                                                    </ul>
                                                }

                                                
                                                <form asp-action="ReplyToComment" asp-controller="Comment" method="post" class="mt-2">
                                                    <div class="form-group">
                                                        <textarea class="form-control" name="Content" placeholder="Responder" rows="1"></textarea>
                                                        <input type="hidden" name="CommentId" value="@comment.Id" />
                                                    </div>
                                                    <button type="submit" class="btn btn-sm btn-secondary mt-2">Responder</button>
                                                </form>
                                            </li>
                                        }
                                    </ul>
                                }
                
                                
                                <form asp-action="AddComment" asp-controller="Comment" method="post" class="mt-2">
                                    <div class="form-group">
                                        <textarea class="form-control" name="Content" placeholder="Comentar" rows="2"></textarea>
                                        <input type="hidden" name="PostId" value="@post.Id" />
                                    </div>
                                    <button type="submit" class="btn btn-sm btn-secondary mt-2">Comentar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
                }
            </div>
        </div>
    </div>
    </main>

    <script src="@Html.Raw("https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js")" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    
</body>
</html>
