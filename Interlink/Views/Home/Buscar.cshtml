@{
    ViewData["Title"] = "Buscar";
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<style>
    body {
        min-height: 100vh;
    }

    main {
        height: 100vh;
        max-height: 100vh;
        overflow-x: auto;
        overflow-y: hidden;
    }

    .dropdown-toggle {
        outline: 0;
    }
</style>
<body>
    <div class="d-flex flex-column flex-shrink-0 bg-body-tertiary" style="width: 4.5rem;">
        <a href="@Url.Action("Index", "Home")" class="d-block p-3 link-body-emphasis text-decoration-none" data-bs-toggle="tooltip" data-bs-placement="right" title="Icon-only">
            <img src="~/img/marca-logo.png" width="90" height="72" class="rounded-circle">
            <span class="visually-hidden">Icon-only</span>
        </a>
        <ul class="nav nav-pills nav-flush flex-column mb-auto text-center">
            <li class="nav-item">
                <a href="@Url.Action("Index", "Home")" class="nav-link py-3 border-bottom rounded-0 @(currentAction == "Index" && currentController == "Home" ? "active" : "")" aria-current="page" data-bs-toggle="tooltip" data-bs-placement="right" title="Inicio">
                    <img src="~/img/Home.png" alt="mdo" width="22" height="24" class="rounded-circle">
                </a>
            </li>
            <li>
                <a href="@Url.Action("Amigos", "Home")" class="nav-link py-3 border-bottom rounded-0 @(currentAction == "Amigos" && currentController == "Home" ? "active" : "")" data-bs-toggle="tooltip" data-bs-placement="right" title="Amigos">
                    <img class="rounded-circle" alt="mdo" width="22" height="24" aria-label="Amigos" src="~/img/Amigos.png">
                </a>
            </li>
            <li>
                <a href="@Url.Action("Chats", "Home")" class="nav-link py-3 border-bottom rounded-0 @(currentAction == "Chats" && currentController == "Home" ? "active" : "")" data-bs-toggle="tooltip" data-bs-placement="right" title="Chats">
                    <img class="rounded-circle" alt="mdo" width="22" height="24" aria-label="Mensajes" src="~/img/Chats.png">
                </a>
            </li>
            <li>
                <a href="@Url.Action("Buscar", "Home")" class="nav-link py-3 border-bottom rounded-0 @(currentAction == "Buscar" && currentController == "Home" ? "active" : "")" data-bs-toggle="tooltip" data-bs-placement="right" title="Buscar">
                    <img class="rounded-circle" alt="mdo" width="24" height="24" aria-label="Explorar" src="~/img/Buscar.png">
                </a>
            </li>
        </ul>
        <div class="dropdown border-top">
            <a href="#" class="d-flex align-items-center justify-content-center p-3 link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="~/img/EditarPerfil.png" alt="mdo" width="24" height="24" class="rounded-circle">
            </a>
            <ul class="dropdown-menu text-small shadow">
                <li><a class="dropdown-item" href="@Url.Action("Ajustes", "User")">Ajustes</a></li>
                <li><a class="dropdown-item" href=@Url.Action("Perfil", "User")#">Perfil</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="@Url.Action("Login", "User")">Cerrar Sesión</a></li>
            </ul>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="@Html.Raw("https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js")"integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

    <script>
        // Aquí puedes agregar scripts de tema o funcionalidades adicionales
    </script>
</body>
</html>
