@using Interlink.Core.Application.ViewModels.User;
@model SaveUserViewModel
@{
    ViewData["Title"] = "Registro";
}

<!doctype html>
<html lang="en" data-bs-theme="auto">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Registro</title>
    <meta name="theme-color" content="#712cf9">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        body {
            height: 100vh; 
            margin: 0; 
            display: flex; 
            align-items: center; 
            justify-content: center; 
            background-color: #5db8f5;
        }

        .form-signin {
            max-width: 400px;
            padding: 2rem; 
            background-color: #fff; 
            border-radius: 15px; 
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
        }

            .form-signin img {
                margin-bottom: 20px;
                width: 250px; 
                height: auto; 
            }

            .form-signin .form-floating:focus-within {
                z-index: 2;
            }

            .form-signin input[type="email"],
            .form-signin input[type="password"] {
                border-radius: 0;
            }
    </style>
</head>
<body>

    <main class="form-signin w-100 m-auto">
        <div class="text-center mb-4">
            <img src="~/img/marca-logo.png" alt="Logo" class="img-fluid">
        </div>
        <form asp-action="Register" asp-controller="User" method="post">
            <h1 class="h3 mb-3 fw-normal text-center">Regístrate Gratis</h1>

            <div class="form-floating mb-3">
                <input asp-for="Username" type="text" class="form-control" id="floatingInput" placeholder="UserNameexample" required>
                <label asp-for="Username">Usuario</label>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com" required>
                <label asp-for="Email">Correo Electrónico</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="PasswordHash" type="password" class="form-control" id="floatingPassword" placeholder="Password" required>
                <label asp-for="PasswordHash">Contraseña</label>
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" type="password" class="form-control" id="floatingConfirmPassword" name="ConfirmPassword" placeholder="Confirmar Contraseña" required>
                <label asp-for="ConfirmPassword">Confirmar Contraseña</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>


            <button class="btn btn-primary w-100 py-2" type="submit">Registrarse</button>
            <div class="mb-3">
                <a asp-controller="User" asp-action="Index" class="btn btn-warning w-100">Atrás</a>
            </div>

            <small class="text-body-secondary d-block text-center mt-3">Haciendo clic en Registrarse, estás aceptando los términos de uso.</small>
        </form>
    </main>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
